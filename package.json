{
  "name": "ra-postgraphile",
  "version": "0.1.1",
  "description": "Postgraphile client for react-admin",
  "main": "dist/index.js",
  "module": "dist/index.es6.js",
  "scripts": {
    "test": "cross-env jest --watch",
    "test-ci": "cross-env BABEL_ENV=node JEST_JUNIT_OUTPUT_NAME=\"reports/junit/js-test-results.xml\" jest --ci --reporters=default --reporters=jest-junit --coverage --coverageDirectory=coverage",
    "prettify": "prettier src/**/*.ts --write",
    "build": "cross-env tsc",
    "clean": "rimraf dist",
    "prepare": "npm run clean && npm run build"
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BowlingX/ra-postgraphile.git"
  },
  "author": "David Heidrich <me@bowlingx.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BowlingX/ra-postgraphile/issues"
  },
  "files": [
    "dist/"
  ],
  "keywords": [
    "react-admin",
    "postgraphile",
    "graphql"
  ],
  "homepage": "https://github.com/BowlingX/ra-postgraphile#readme",
  "devDependencies": {
    "@types/pluralize": "^0.0.29",
    "cross-env": "^6.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "husky": "^2.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-environment-enzyme": "^7.1.1",
    "jest-enzyme": "^7.1.1",
    "jest-junit": "^8.0.0",
    "prettier": "1.17.1",
    "pretty-quick": "^1.10.0",
    "ra-data-graphql": "^3.0.0-beta.3",
    "react": "^16.9.0",
    "react-admin": "^3.0.0-beta.3",
    "react-dom": "^16.9.0",
    "renamer": "^1.1.2",
    "semantic-release": "^15.13.24"
  },
  "dependencies": {
    "graphql": "^14.5.8",
    "graphql-tag": "^2.10.1",
    "pluralize": "^8.0.0"
  },
  "jest": {
    "coverageReporters": [
      "text",
      "cobertura"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "setupFilesAfterEnv": [
      "jest-enzyme"
    ],
    "testEnvironment": "enzyme",
    "testEnvironmentOptions": {
      "enzymeAdapter": "react16"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/assetsMock.js",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "roots": [
      "src/"
    ],
    "transform": {
      "\\.js$": [
        "babel-jest"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "peerDependencies": {
    "ra-data-graphql": "^2|^3",
    "react-admin": "^2|^3"
  }
}
